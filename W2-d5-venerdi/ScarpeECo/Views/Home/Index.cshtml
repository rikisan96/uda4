
@model IEnumerable<ScarpeCo.Models.Product>

@{
    ViewData["Title"] = "Vetrina Prodotti";
}

<div class="container">

<h1 class="text-center">Vetrina Prodotti</h1>
    <div class="row justify-content-center py-2 ">
    @foreach (var Product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img class="card-img-top" src="@Product.CoverImageUrl" alt="@Product.Name">
                <div class="card-body">
                    <h5 class="card-title">@Product.Name</h5>
                    <p class="card-text">€ @Product.Price</p>
                    <a href="@Url.Action("Details", "Products", new { id = Product.Id })" class="btn btn-primary">Dettagli</a>
                </div>
            </div>
        </div>
    }
    <div class="container d-flex justify-content-center">
        <a href="@Url.Action("Create", "Products")" class="m-3 btn btn-primary"> Aggiungi Prodotto</a>
        <a href="@Url.Action("Create", "Products")" class="m-3  btn btn-danger"> Elimina Prodotto</a>

    </div>
</div>
